{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenT Poincare Sphere Simulator",
  "version": "0.1.0",
  "identifier": "com.opent.poincare-sphere-simulator",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenT Poincare Sphere Simulator",
        "decorations": false,
        "width": 1100,
        "height": 750
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
